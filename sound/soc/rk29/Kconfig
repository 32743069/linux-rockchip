config SND_RK29_SOC_RK1000
	tristate "SoC I2S Audio support for rockchip - RK1000"
	depends on SND_RK29_SOC && RK1000_CONTROL && I2C_RK29
	select SND_RK29_SOC_I2S
	select SND_SOC_RK1000
	help
